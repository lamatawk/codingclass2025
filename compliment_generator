library(shiny)

# List of compliments
compliments <- c(
  "You light up the room! âœ¨",
  "You're coding like a pro! ðŸ’»",
  "You have a beautiful mind! ðŸ§ ðŸ’–",
  "You make learning fun! ðŸŽ‰",
  "Your creativity is inspiring! ðŸŽ¨",
  "Youâ€™re the heart of the team! â¤ï¸",
  "You bring so much joy! ðŸŒŸ"
)

ui <- fluidPage(
  titlePanel("Valentine's Compliment Generator ðŸ’•"),
  sidebarLayout(
    sidebarPanel(
      actionButton("new_compliment", "Give Me a Compliment! ðŸ’Œ")
    ),
    mainPanel(
      h3(textOutput("compliment"), style = "color: red; font-weight: bold; text-align: center;")
    )
  )
)

server <- function(input, output) {
  compliment_reactive <- reactiveVal("Click the button for a compliment! ðŸ˜Š")
  
  observeEvent(input$new_compliment, {
    compliment_reactive(sample(compliments, 1))
  })
  
  output$compliment <- renderText({
    compliment_reactive()
  })
}

shinyApp(ui = ui, server = server)
